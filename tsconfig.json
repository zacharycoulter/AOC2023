{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "types": [
            "bun-types"
        ],
        "paths": {
            "@lib/*": [
                "./lib/*"
            ],
            "@days/*": [
                "./days/*"
            ]
        }
    }
}
